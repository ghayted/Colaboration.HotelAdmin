<Window x:Class="HotelAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Label -->
        <Label Content="Bienvenue dans l'application HotelAdmin" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="20" Margin="0,20,0,0"/>

        <!-- TextBox -->
        <TextBox Name="txtInput" Width="300" Height="30" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 Margin="0,0,0,60"/>

        <!-- Button -->
        <Button Content="Soumettre" Width="100" Height="40" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="0,0,0,20" Click="Button_Click"/>
    </Grid>
</Window>

